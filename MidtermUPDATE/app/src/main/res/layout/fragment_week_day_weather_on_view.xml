<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.WeekWeatherFragmentOnView">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <FrameLayout
            android:id="@+id/WeatherLayoutID"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/WeatherImageViewId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/iconfinder_weathe" />

            <TextView
                android:id="@+id/weatherTemperatureTextViewID"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:paddingStart="20dp"
                android:text="@string/temperature"
                android:textColor="#FF0505"
                android:textSize="45sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/windSpeedTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/ws"
                    android:textColor="#FF0505"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/windDirectionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/wd"
                    android:textColor="#FF0505"
                    android:textSize="30sp" />
            </LinearLayout>
        </FrameLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/weatherDayTextViewID"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/day"
        android:textColor="#0A8A04"
        android:textSize="35sp"
        android:textStyle="bold"
        tools:ignore="RtlSymmetry" />

</LinearLayout>