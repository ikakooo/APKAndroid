<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backgroung"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="90dp"
            android:width="10dp"
            android:background="@mipmap/ic_launcher"
            android:color="@android:color/white"
            android:innerRadius="0dp"
            android:autofillHints="@string/log_in"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:useLevel="false"
            android:contentDescription="TODO">

        </ImageView>

        <EditText
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/logInColor"
            android:hint="@string/username"
            android:autofillHints="@string/username"
            android:inputType="textEmailAddress"
            android:paddingStart="10sp"
            android:singleLine="true"
            android:theme="@style/MyTextTheme"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/passWordText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/logInColor"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingStart="10sp"
            android:autofillHints="@string/username"
            android:singleLine="true"
            android:theme="@style/MyTextTheme"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="end"
        android:orientation="vertical"
        android:paddingStart="40dp"
        tools:ignore="RtlSymmetry">


        <Button
            android:id="@+id/loginButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:background="#07F413"
            android:text="@string/log_in"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/textView"
            style="@style/italicStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:gravity="center"

            android:text="@string/or_ForSeparate"
            android:textColor="@color/logInColor"
            android:textSize="26sp" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:background="#FF0000"
            android:text="@string/registerButton"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/forgotPasswordButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#DF6005"
            android:text="@string/forgot_password"
            android:textAllCaps="false" />
    </LinearLayout>


</LinearLayout>